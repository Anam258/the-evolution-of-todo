# =============================================================================
# Todo Application - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control - it contains secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Neon Serverless PostgreSQL connection string
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://your-user:your-password@your-neon-host.neon.tech/your-database?sslmode=require"

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# CRITICAL: JWT signing secret shared between frontend and backend
# Requirements:
#   - MUST be at least 32 characters long
#   - MUST be the same value in both backend and frontend environments
#   - Use a cryptographically secure random string
#   - Different secrets MUST be used for each environment (dev/staging/prod)
#
# Generate a secure secret with:
#   openssl rand -base64 32
#   OR
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# SECRET ROTATION WARNING:
#   Changing BETTER_AUTH_SECRET will IMMEDIATELY invalidate ALL existing JWT tokens.
#   All currently logged-in users will be forced to re-authenticate.
#   Plan secret rotation during low-traffic periods if necessary.
#
BETTER_AUTH_SECRET="your-secret-placeholder-min-32-characters-long"

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# JWT signing algorithm (HS256, HS384, or HS512)
# HS256 is recommended for shared secret approach
JWT_ALGORITHM="HS256"

# Token expiration time in minutes (default: 1440 = 24 hours)
# Lower values = more secure but worse UX (more frequent re-logins)
# Higher values = better UX but tokens valid longer if compromised
JWT_EXPIRATION_DELTA=1440

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# In production, restrict to your actual frontend domain(s)
# Example: "http://localhost:3000,https://your-app.vercel.app"
ALLOWED_ORIGINS="http://localhost:3000,https://your-app.vercel.app"

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the FastAPI server
PORT=8000

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT="development"

# Enable/disable debug mode
DEBUG="False"

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"
